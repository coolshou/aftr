auto lo eth1 eth2 eth3
iface lo inet loopback

iface eth1 inet dhcp

iface eth2 inet static
 address 10.0.1.2
 netmask 255.255.255.0

iface eth2 inet6 static
 address 2001::1:0:0:0:2
 netmask 64

iface eth3 inet static
 address 10.0.40.1
 netmask 255.255.255.0
